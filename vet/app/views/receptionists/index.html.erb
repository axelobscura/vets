<p id="notice"><%= notice %></p>

<h1>Listing Receptionists</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pet</th>
      <th>Customer</th>
      <th>Reminder</th>
      <th>Reason</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receptionists.each do |receptionist| %>
      <tr>
        <td><%= receptionist.date %></td>
        <td><%= receptionist.pet %></td>
        <td><%= receptionist.customer %></td>
        <td><%= receptionist.reminder %></td>
        <td><%= receptionist.reason %></td>
        <td><%= receptionist.user_id %></td>
        <td><%= link_to 'Show', receptionist %></td>
        <td><%= link_to 'Edit', edit_receptionist_path(receptionist) %></td>
        <td><%= link_to 'Destroy', receptionist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

